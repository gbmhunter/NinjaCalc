<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<fx:root type="javafx.scene.layout.GridPane" xmlns:fx="http://javafx.com/fxml"
         prefWidth="250" prefHeight="300"
         style="-fx-background-color: yellow">
        <VBox>
            <ImageView fx:id="calculatorIcon">
            </ImageView>
            <Label fx:id="labelCalculatorName"
                   GridPane.rowIndex="0"
                   alignment="CENTER" contentDisplay="CENTER" prefHeight="67.0" prefWidth="510.0" text="Calculator Name" />
            <Label>
                Calculator description.
            </Label>
            <Button fx:id="btnOpenCalc"
                    GridPane.rowIndex="1"
                    mnemonicParsing="false" onAction="#btnOpenOnAction" text="Open" />
        </VBox>
</fx:root>