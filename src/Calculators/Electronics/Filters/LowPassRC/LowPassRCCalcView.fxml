<?import javafx.scene.web.WebView?>
<VBox xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <ScrollPane fitToWidth="true" styleClass="scrollPane" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
        <padding>
            <Insets top="40" />
        </padding>
        <VBox alignment="CENTER" spacing="20" style="-fx-font-family: Calibri; -fx-text-fill: #505050; -fx-font-size: 12pt;" styleClass="vbox">

            <!-- =========== INFO SECTION ========== -->
            <TitledPane text="Info" expanded="false"
                        maxWidth="700"
                        style="-fx-font-size: 16pt;" >
                <WebView fx:id="infoWebView" prefHeight="300"></WebView>
            </TitledPane>

            <!-- =========== CALCULATOR DIAGRAM AND VARIABLES ========== -->
            <StackPane>
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <!--<AutoScalingStackPane minWidth="300" minHeight="300" maxWidth="800" maxHeight="800" alignment="CENTER">-->
                    <Group>

                        <ImageView fitHeight="600.0" fitWidth="600.0" layoutY="29.0" preserveRatio="true">
                            <image>
                                <Image url="@diagram.png" />
                            </image>
                        </ImageView>

                        <TextField fx:id="rValue" layoutX="233.0" layoutY="46.0" prefHeight="30" prefWidth="80" />
                        <ComboBox fx:id="rUnits" layoutX="320.0" layoutY="46.0" prefHeight="30" />
                        <RadioButton fx:id="rIO" layoutX="144.0" layoutY="40.0" />

                        <TextField fx:id="cValue" layoutX="397.0" layoutY="200.0" prefHeight="30" prefWidth="80" />
                        <ComboBox fx:id="cUnits" layoutX="487.0" layoutY="200.0" prefHeight="30" />
                        <RadioButton fx:id="cIO" layoutX="448.0" layoutY="163.0" />

                        <TextField fx:id="fcValue" layoutX="214.0" layoutY="379.0" prefHeight="30" prefWidth="80" />
                        <ComboBox fx:id="fcUnits" layoutX="300.0" layoutY="379.0" prefHeight="30" />
                        <RadioButton fx:id="fcIO" layoutX="130.0" layoutY="383.0" />

                    </Group>
                <!--</AutoScalingStackPane>-->
            </StackPane>
        </VBox>
    </ScrollPane>
</VBox>
