<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableRow?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.RowConstraints?>
<VBox fillWidth="true" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <ScrollPane fitToWidth="true" styleClass="scrollPane" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
        <padding><Insets bottom="20" left="20" right="20" top="40" /></padding>
        <VBox alignment="CENTER" spacing="20" style="-fx-font-family: Calibri; -fx-text-fill: #505050; -fx-font-size: 12pt;" styleClass="vbox">

            <!-- =========== INFO SECTION ========== -->
            <TitledPane expanded="false" maxWidth="700" style="-fx-font-size: 16pt;" text="Info">
                <WebView fx:id="infoWebView" prefHeight="300" />
            </TitledPane>

            <!-- =========== CALCULATOR DIAGRAM AND VARIABLES ========== -->
            <StackPane>
                <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                <!--<AutoScalingStackPane minWidth="300" minHeight="300" maxWidth="600" prefHeight="600" alignment="CENTER">-->
                <Group>
                    <!--<ImageView fitHeight="600.0" fitWidth="600.0"><image><Image url="@diagram.png" /></image></ImageView>-->

                    <HBox layoutX="150.0" layoutY="220.0" spacing="10" alignment="CENTER">
                        <Label>Desired Resistance</Label>
                        <TextField fx:id="desiredResistanceValue" prefHeight="25" prefWidth="80" />
                        <Label prefHeight="25">Î©</Label>
                    </HBox>

                    <GridPane fx:id="variableGridPane" layoutX="150" layoutY="300" hgap="10" vgap="10">

                        <rowConstraints>
                            <RowConstraints minHeight="80" />
                        </rowConstraints>

                        <columnConstraints>
                            <ColumnConstraints />
                            <!-- CLOSEST ABSOLUTE RESISTANCE -->
                            <ColumnConstraints maxWidth="100"/>
                            <ColumnConstraints maxWidth="20"/>
                            <ColumnConstraints maxWidth="50"/>
                            <ColumnConstraints maxWidth="20"/>
                            <!-- CLOSEST EQUAL OR LOWER RESISTANCE -->
                            <ColumnConstraints maxWidth="100"/>
                            <ColumnConstraints maxWidth="20"/>
                            <ColumnConstraints maxWidth="50" />
                            <ColumnConstraints maxWidth="20"/>
                            <!-- CLOSEST EQUAL OR HIGHER RESISTANCE -->
                            <ColumnConstraints maxWidth="100"/>
                            <ColumnConstraints maxWidth="20"/>
                            <ColumnConstraints maxWidth="50" />
                            <ColumnConstraints maxWidth="20"/>
                        </columnConstraints>

                        <children>

                            <Label GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;">Series</Label>

                            <Label GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2" wrapText="true" style="-fx-font-weight: bold;">Closest Resistance</Label>
                            <Label GridPane.rowIndex="0" GridPane.columnIndex="3" GridPane.columnSpan="2" wrapText="true" style="-fx-font-weight: bold;">Percentage Error</Label>

                            <Label GridPane.rowIndex="0" GridPane.columnIndex="5" GridPane.columnSpan="2" wrapText="true" style="-fx-font-weight: bold;">Closest Equal Or Lower Resistance</Label>
                            <Label GridPane.rowIndex="0" GridPane.columnIndex="7" GridPane.columnSpan="2" wrapText="true" style="-fx-font-weight: bold;">Percentage Error</Label>

                            <Label GridPane.rowIndex="0" GridPane.columnIndex="9" GridPane.columnSpan="2" wrapText="true" style="-fx-font-weight: bold;">Closest Equal Or Higher Resistance</Label>
                            <Label GridPane.rowIndex="0" GridPane.columnIndex="11" GridPane.columnSpan="2" wrapText="true" style="-fx-font-weight: bold;">Percentage Error</Label>

                            <!-- The rest of the tables child nodes are added programmatically when the calculator is opened. -->

                        </children>

                    </GridPane>

                </Group>
                <!--</AutoScalingStackPane>-->
            </StackPane>
        </VBox>
    </ScrollPane>
</VBox>
