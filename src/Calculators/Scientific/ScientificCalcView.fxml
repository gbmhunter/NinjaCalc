<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fillWidth="true" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <ScrollPane fitToWidth="true" styleClass="scrollPane" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
        <padding><Insets bottom="20" left="20" right="20" top="40" /></padding>
        <VBox alignment="CENTER" spacing="20" style="-fx-font-family: Calibri; -fx-text-fill: #505050; -fx-font-size: 12pt;" styleClass="vbox">

            <StackPane>
                <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

                <!-- This VBox gets populated with the expression results each time the user presses enter -->
                <VBox fx:id="expressionsVBox" maxWidth="800" spacing="10">
                    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                    <TextField fx:id="expressionInput"></TextField>
                </VBox>
            </StackPane>
        </VBox>
    </ScrollPane>
</VBox>
