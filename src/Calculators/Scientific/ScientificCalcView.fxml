<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<AnchorPane
        xmlns="http://javafx.com/javafx/null"
        xmlns:fx="http://javafx.com/fxml/1">
    <GridPane
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
            alignment="CENTER"
            style="-fx-background-color: #fafafa; -fx-font-family: Calibri; -fx-text-fill: #505050; -fx-font-size: 14pt;">
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints minHeight="150" maxHeight="150" />
        </rowConstraints>

        <columnConstraints>
            <ColumnConstraints prefWidth="800" />
        </columnConstraints>

        <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
        </padding>

        <!-- VBox is where expression results get inserted -->
        <ScrollPane fx:id="expressionsScrollPane" fitToWidth="true" style="-fx-background-color: blue;" >
            <VBox fx:id="expressionsVBox" GridPane.rowIndex="0"
                  alignment="BOTTOM_CENTER"
                  maxWidth="800" spacing="10" fillWidth="true"
                  prefHeight="1000"
                    style="-fx-background-color: #f0f0f0;">
                <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
            </VBox>
        </ScrollPane>
        <!-- This is where the user enters new expressions to evaluate -->
        <TextField GridPane.rowIndex="1" fx:id="expressionInput"></TextField>
    </GridPane>
</AnchorPane>
