<UserControl x:Class="NinjaCalc.CalculatorGridElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local_core_view="clr-namespace:NinjaCalc.Core.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="250"
             FontFamily="Calibri">
    <Grid Width="250" Height="300">
        <local_core_view:ClippingBorder
            BorderBrush="Silver"
            BorderThickness="1"
            CornerRadius="5">
            <local_core_view:ClippingBorder.Effect>
                <!-- We want the shadow effect to appear equally on all four sides, so the ShadowDepth must = 0. -->
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" />
            </local_core_view:ClippingBorder.Effect>
            <Rectangle Fill="White" />
        </local_core_view:ClippingBorder>

     
        <!-- CONTENT INSIDE BORDER -->    
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="32" />
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Name="IconImage" Width="200" Height="100" Source="/NinjaCalc;component/Calculators/Basic/OhmsLaw/icon.png"></Image>
            <TextBlock Grid.Row="1" Name="Title" FontSize="30" Foreground="#404040" TextWrapping="Wrap">Calculator Title</TextBlock>
            <TextBlock Grid.Row="2" Name="Description" FontSize="15" Foreground="#707070" FontStyle="Italic" TextWrapping="Wrap" Height="100">This is a description of the calculator.</TextBlock>
            <DockPanel Grid.Row="3" HorizontalAlignment="Right">
                <Button Name="ButtonOpen" Width="60" Height="30">Open</Button>
            </DockPanel>
        </Grid>
   
        
    </Grid>
</UserControl>
